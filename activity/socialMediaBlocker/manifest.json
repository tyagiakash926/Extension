{
    "name": "Blocker Extension",
    "version": "1.0",
    "description": "This is a Social media Blocker extension!!",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ]
}